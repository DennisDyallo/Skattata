@page
@model ResultsModel
@{
    ViewData["Title"] = "SIE File Results";
}

<div class="container">
    @if (Model.SieData != null)
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>SIE File Analysis Results</h1>
            <a href="/" class="btn btn-secondary">Parse Another File</a>
        </div>

        <!-- File Information -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-file-alt"></i> File Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>File Name:</strong> @Model.SieData.FileName</p>
                                <p><strong>Company:</strong> @Model.SieData.CompanyName</p>
                                <p><strong>Organization Number:</strong> @Model.SieData.OrganizationNumber</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Format:</strong> @Model.SieData.Format</p>
                                <p><strong>Total Vouchers:</strong> @Model.SieData.TotalVouchers</p>
                                <p><strong>Total Accounts:</strong> @Model.SieData.TotalAccounts</p>
                            </div>
                        </div>
                        @if (Model.SieData.ErrorCount > 0)
                        {
                            <div class="alert alert-warning mt-3">
                                <strong>@Model.SieData.ErrorCount parsing errors found:</strong>
                                <ul class="mb-0 mt-2">
                                    @foreach (var error in Model.SieData.Errors.Take(5))
                                    {
                                        <li>@error</li>
                                    }
                                    @if (Model.SieData.Errors.Count > 5)
                                    {
                                        <li><em>... and @(Model.SieData.Errors.Count - 5) more errors</em></li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking Years -->
        @if (Model.SieData.BookingYears.Any())
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5><i class="fas fa-calendar"></i> Booking Years</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Year ID</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var year in Model.SieData.BookingYears)
                                        {
                                            <tr>
                                                <td>@year.Id</td>
                                                <td>@year.StartDate.ToString("yyyy-MM-dd")</td>
                                                <td>@year.EndDate.ToString("yyyy-MM-dd")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Accounts Summary -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-list"></i> Chart of Accounts (@Model.SieData.Accounts.Count accounts)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>Account</th>
                                        <th>Name</th>
                                        <th>Opening Balance</th>
                                        <th>Closing Balance</th>
                                        <th>Result</th>
                                        <th>SRU Code</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model.SieData.Accounts)
                                    {
                                        <tr>
                                            <td><code>@account.AccountId</code></td>
                                            <td>@account.Name</td>
                                            <td class="text-end">@account.OpeningBalance.ToString("N2")</td>
                                            <td class="text-end">@account.ClosingBalance.ToString("N2")</td>
                                            <td class="text-end">@account.Result.ToString("N2")</td>
                                            <td>@account.SruCode</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Vouchers -->
        @if (Model.SieData.Vouchers.Any())
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5><i class="fas fa-receipt"></i> Vouchers (@Model.SieData.Vouchers.Count vouchers)</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-sm">
                                    <thead>
                                        <tr>
                                            <th>Series</th>
                                            <th>Number</th>
                                            <th>Date</th>
                                            <th>Description</th>
                                            <th>Rows</th>
                                            <th>Total Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var voucher in Model.SieData.Vouchers.Take(100))
                                        {
                                            <tr>
                                                <td>@voucher.Series</td>
                                                <td>@voucher.Number</td>
                                                <td>@voucher.Date.ToString("yyyy-MM-dd")</td>
                                                <td>@voucher.Text</td>
                                                <td>@voucher.RowCount</td>
                                                <td class="text-end">@voucher.TotalAmount.ToString("N2")</td>
                                            </tr>
                                        }
                                        @if (Model.SieData.Vouchers.Count > 100)
                                        {
                                            <tr>
                                                <td colspan="6" class="text-center text-muted">
                                                    <em>Showing first 100 vouchers of @Model.SieData.Vouchers.Count total</em>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Dimensions -->
        @if (Model.SieData.Dimensions.Any())
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5><i class="fas fa-project-diagram"></i> Dimensions</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var dimension in Model.SieData.Dimensions)
                            {
                                <h6>@dimension.Number: @dimension.Name</h6>
                                @if (dimension.Objects.Any())
                                {
                                    <div class="table-responsive mb-3">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Object Number</th>
                                                    <th>Name</th>
                                                    <th>Opening Balance</th>
                                                    <th>Closing Balance</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var obj in dimension.Objects.Values.Take(20))
                                                {
                                                    <tr>
                                                        <td>@obj.Number</td>
                                                        <td>@obj.Name</td>
                                                        <td class="text-end">@obj.OpeningBalance.ToString("N2")</td>
                                                        <td class="text-end">@obj.ClosingBalance.ToString("N2")</td>
                                                    </tr>
                                                }
                                                @if (dimension.Objects.Count > 20)
                                                {
                                                    <tr>
                                                        <td colspan="4" class="text-center text-muted">
                                                            <em>Showing first 20 objects of @dimension.Objects.Count total</em>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            <h4>No Data Available</h4>
            <p>No SIE file data found. Please <a href="/">upload a file</a> first.</p>
        </div>
    }
</div>